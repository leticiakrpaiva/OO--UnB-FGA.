// Função para área de um círculo
função CalcularAreaCirculo(raio: Real): Real {
    retorne 3.14 * raio * raio
}
// Função para área de um retângulo
função CalcularAreaRetangulo(largura: Real, altura: Real): Real {
    retorne largura * altura
}
// Função para área de um triângulo
função CalcularAreaTriangulo(base: Real, altura: Real): Real {
    retorne (base * altura) / 2
}
// Função para adicionar uma forma
função AdicionarForma(nome, área) {
    forma = nova Forma
    forma.Nome = nome
    forma.Área = área
    formas.adicionar(forma)
}
função main() {
    formas: lista de forma

        escreva("----- UNIVERSO INTERATIVO -----")
        escreva("DIGITE [1] PARA CRIAR CIRCULO")
        escreva("DIGITE [2] PARA CRIAR RETANGULO")
        escreva("DIGITE [3] PARA CRIAR TRIANGULO")
        escreva("DIGITE [4] PARA FORMAS CADASTRADAS")
        escreva("DIGITE [5] PARA SAIR")
        escreva("______________________________")

        opcao = leia("Escolha uma opção: ")

        // Opção 1: CRIAR CIRCULO
        se opcao == 1 {
            raio = leia("Raio: ")
            área = CalcularAreaCirculo(raio)
            AdicionarForma("Círculo", área)
        } 
        // Opção 2: CRIAR RETANGULO
        se opcao == 2 {
            largura = leia("Largura: ")
            altura = leia("Altura: ")
            área = CalcularAreaRetangulo(largura, altura)
            AdicionarForma("Retângulo", área)
        } 
        // Opção 3: CRIAR TRIANGULO
        se opcao == 3 {
            base = leia("Base: ")
            altura = leia("Altura: ")
            área = CalcularAreaTriangulo(base, altura)
            AdicionarForma("Triângulo", área)
        } 
        // Opção 4: FORMAS CADASTRADAS
        se opcao == 4 {
                escreva("Nome: ", forma.Nome)
                escreva("Área: ", forma.Área)
            } 
        // Opção 5: SAIR
        se opcao == 5 {
            sair
        } 
        senão {
            escreva("Opção inválida.")
        }
    }
}


